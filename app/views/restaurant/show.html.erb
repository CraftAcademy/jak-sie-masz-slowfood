<div class="container">
  <div class="row">
    <div class="col"></div>
    <div class="col-8">
      <h1 style="margin-top: 1em;"><%= @restaurant.name %></h1>
      <p class="address"><%= @restaurant.street_address %>,
        <%= @restaurant.post_code %>,
        <%= @restaurant.city %></p>
      <h2 class="mr-dafoe"><%= @restaurant.description %></h2>
      <% @restaurant.menus.each do |menu| %>
        <div id="menu-<%= menu.id %>" class="card-body">
          <h3 class="mr-dafoe menu-dafoe"><%= menu.name %></h3>
          <% menu.product_categories.each do |product_category| %>
            <div id="product_category-<%= product_category.id %>" class="card-title">
              <h2 class="mr-dafoe"><%= product_category.name %></h2>
              <% product_category.products.each do |product| %>
                <div id="product-<%= product.id %>" class="card-text">
                  <div class="card-text">
                    <h4><%= product.name %></h4>
                    <p><%= product.description %></p>
                  </div>
                  <div class="card-text">
                    <p>Price:
                      <%= product.price %>
                      kr</p>
                  </div>
                  <% if session[:order_id] %>
                    <%=button_to 'Add to Order', order_path(session[:order_id]), method: :put, params: {product: product}, class: 'btn btn-light' %>
                  <% else %>
                    <%=button_to 'Add to Order', orders_path, params: {product: product}, class: 'btn btn-light' %>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="col"></div>
  </div>
</div>
