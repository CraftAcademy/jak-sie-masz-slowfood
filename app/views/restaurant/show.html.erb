<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.description %></p>

<% @restaurant.products.each do |product| %>
  <div id="product-<%= product.id %>">
     <h4><%= product.name %></h4>
     <p><%= product.description %></p>
     <p><%= product.price %></p>
       <div id="<%=product.name %>">
         <%= image_tag "/assets/images/chicken_wings.jpg" %>
       </div>
  </div>
<% end %>
