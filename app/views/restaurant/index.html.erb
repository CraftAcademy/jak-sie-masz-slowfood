<h1>Jak sie masz</h1>
<p>What do you feel like tonight?</p>

<% @restaurants.each do |restaurant| %>
  <div id="restaurant-<%= restaurant.id %>">
    <%= "#{restaurant.name}" %>
    <%= link_to 'Show page', restaurant_path(restaurant) %>
  </div>
<% end %>

<div id="map"></div>
<script type="text/javascript" charset="utf-8">

function addMarkers () {
  var restaurants = <%= raw @restaurants.to_json %>;
  restaurants.forEach(item => {
              map.addMarker({
                  lat: item.latitude,
                  lng: item.longitude,
                  title: item.name,
                  infoWindow: {
                    content: `<h4>${item.name}</h4><p>${item.city}</p>`}
                   });
  });
}
</script>
